{
  "name": "payments-service",
  "version": "0.1.0",
  "description": "Microservicio de Pagos para E-commerce",
  "repository": {
    "type": "git",
    "url": "https://github.com/brunolucero19/microservicio-pagos.git"
  },
  "author": "Bruno Lucero",
  "license": "MIT",
  "scripts": {
    "start": "npm run build && npm run watch",
    "build": "npm run build-ts && npm run tslint",
    "serve": "node dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\"  \"npm run watch-ts\" \"nodemon dist/server.js\"",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "test": "jest --coverage --verbose"
  },
  "dependencies": {
    "amqplib": "^0.10.4",
    "axios": "^1.13.2",
    "body-parser": "^1.20.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "mongoose": "^8.6.3",
    "morgan": "^1.10.0",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.5",
    "@types/body-parser": "^1.19.5",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.16.5",
    "@types/swagger-ui-express": "^4.1.8",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "node-mocks-http": "^1.15.1",
    "nodemon": "^3.1.4",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tslint": "^6.1.3",
    "typescript": "^5.5.4"
  }
}
