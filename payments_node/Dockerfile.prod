FROM node:20-alpine

WORKDIR /app

# Copiar archivos de dependencias
COPY package*.json ./
COPY tsconfig.json ./
COPY tslint.json ./

# Instalar solo dependencias de producción
RUN npm ci --only=production

# Copiar código compilado
COPY dist ./dist

# Exponer puerto
EXPOSE 3005

# Usuario no root para seguridad
USER node

# Comando de inicio
CMD ["node", "dist/server.js"]
